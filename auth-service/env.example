# ============================================
# Authentication Service Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# JWT Configuration (REQUIRED)
# ============================================
# Generate a strong secret (minimum 256 bits / 32 characters)
# Use a tool like: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-256-bits
JWT_EXPIRATION=86400000

# ============================================
# Firebase Configuration (REQUIRED for production)
# ============================================
# Enable/disable Firebase authentication
FIREBASE_ENABLED=true

# Path to Firebase service account JSON file
# Download from: Firebase Console > Project Settings > Service Accounts
FIREBASE_CONFIG_PATH=/path/to/firebase-service-account.json

# Firebase Web API Key (REQUIRED for password verification)
# Get from: Firebase Console > Project Settings > General > Web API Key
FIREBASE_WEB_API_KEY=your-firebase-web-api-key

# ============================================
# Database Configuration
# ============================================
DB_URL=jdbc:mysql://localhost:3306/ticket_auth_db
DB_USERNAME=root
DB_PASSWORD=your-database-password

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins (no wildcards in production!)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8081

# ============================================
# Spring Profile
# ============================================
# Options: dev, test, prod
SPRING_PROFILES_ACTIVE=prod

